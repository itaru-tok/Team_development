<div class="col-lg-4 col-md-6 col-movie">
  <div class="card card-movie">
    <iframe src="<%= movie.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    <div class="card-body">
      <p id="movie-<%= movie.id %>">
        <% if movie.watched_by?(current_user) %>
          <%= render "finished", movie: movie %>
        <% else %>
          <%= render "unfinish", movie: movie %>
        <% end %>
      </p>
      <p class="card-movie-title">Lv.<%= movie_counter + 1 %>ï¼š<%= movie.title%></p>
    </div>
  </div>
</div>
